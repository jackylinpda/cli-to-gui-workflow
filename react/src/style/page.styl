a
  text-decoration: none

.App
  background-image: url('../images/bg.jpg')
  background-size: cover

  .wrapper
    // display: flex
    height 100%

#drop-zone
  box-sizing: border-box
  width 100%
  height: 100%
  // flex: 1
  padding-left 120px
  padding-right: 20px
  // &.active

  .add-xterm
    position: fixed
    right 10px
    top: 6px
    width 30px
    height 30px
    line-height 30px
    font-size: 30px
    color: #fff
    // border-radius: 50%
    // background: hsla(0,0%,100%,.3)

  .work-space
    display: none
    width: 100%
    // box-sizing: border-box
    // padding-top: 10px

    &.active
      display: block

  .xterm-list
    box-sizing: border-box
    // margin-left: 120px
    // margin-right: 20px
    // padding-left 20px
    // padding-right 20px
    padding-top: 20px
    padding-bottom: 20px

    .ixterm
      display: none
      width: 100%
      height: 100%
      box-shadow: 2px 2px 10px 10px rgba(0,0,0,.3)

      &.active
        display: block

  .action-list

    .action
      display: inline-block;
      color: #fff;
      text-shadow: 1px 2px 6px rgba(0, 0, 0, 1)
      border: 1px solid rgba(255,255,255,0.5);
      // background: transparent;
      background: hsla(0,0%,100%,.3)
      border-radius: 2px;
      padding: 3px 7px;
      margin-left: 10px;
      margin-top 10px

#file-upload
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0
  text-align: center
  background-color: rgba(0,0,0,.6)
  translate: all ease .4s

  input
    opacity: 0
    position: absolute
    left: -99999px

  .icon-plus
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0
    // width: 100vw
    // height: 100vh
    line-height: 100vh
    // top 50%
    // left: 50%
    color: #989898
    font-size: 200px
    // transform: translate(-50%, -50%)

.sidebar
  font-size: 0
  background: hsla(0,0%,100%,.3)
  overflow-x: hidden

  .project
    width 115px
    height 34px
    color: #ddd
    font-size: 0
    // padding: 6px 10px
    background-color: rgba(59, 59, 59, 0.5)
    // background: hsla(0,0%,100%,.2)
    transition: all ease-in-out .3s

    span
      display: inline-block
      width: 100px
      font-size: 16px
      padding: 6px 0 6px
      text-align: center
      vertical-align: middle

      &.active
        // box-shadow: 0 0 10px 10px inset rgba(0,0,0,.5)
    input
      box-sizing: border-box
      display: inline-block
      width: 100px
      height: 34px;
      line-height: 34px
      vertical-align: middle
      color: #fff
      font-size: 14px
      text-align: center
      border: none
      outline: none
      padding: 0 2px 0 4px;
      background-color: transparent;

      &::placeholder
        color: #aaa;

    .remove
      display: inline-block;
      width: 15px;
      height 34px
      line-height 34px
      color: #fff
      font-size: 16px
      text-align: center
      vertical-align: middle
      text-decoration: none
      background-color: rgba(255, 0, 0, .4)
      transition: all ease-in-out .3s

.tabs
  position: fixed
  right 0
  top: 10px

  .btn-add
    display: block
    width 20px
    height 20px
    line-height 20px
    text-align: center
    color: #fff
    background: rgba(243, 92, 20, 0.6)
    background: hsla(0,0%,100%,.3)
    background: linear-gradient(90deg, rgba(243,189,184,0.4), rgba(243,92,20,0.7))
  
  .tab
    position relative
    width: 20px
    height 40px
    // width 50px
    // height 30px
    // line-height 30px
    color: rgba(255,255,255,.4)
    text-align: center
    border-radius: 5px 0 0 5px
    // background: linear-gradient(90deg,rgba(243, 189, 184, 0),rgba(243, 189, 184, 0.8));
    background: linear-gradient(90deg,rgba(243, 189, 184, 0),rgba(140, 140, 140, 0.8));
    writing-mode: vertical-rl
    cursor default
    // border-bottom: 1px solid #ffffff;
    margin-bottom: 4px;

    &.active
      // background: linear-gradient(90deg,rgba(243, 189, 184, 0),rgba(243, 189, 184, 0.8))
      background: #000

    &:hover,
    &.active
      color: rgba(255,255,255,1)

    &:hover
      a
        // display: block
        transform: scale(1.2)

    a
      // display: none;
      position: absolute
      left -10px
      top: -12px
      width: 20px
      height 20px
      line-height: 20px
      color: #fff
      border-radius: 50%
      // background: hsla(0,0%,100%,.3)
      background: transparent
      transform: scale(0)
      transition: all ease-in-out .2s

    